<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lay_post_color"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
	android:layout_width="match_parent"
	android:orientation="horizontal"
	android:layout_height="wrap_content"
	android:gravity="center">

	<androidx.cardview.widget.CardView
	    android:visibility="gone"

	    android:layout_width="62.0dip"
	    android:layout_height="62.0dip"
	    app:cardCornerRadius="32.0dip"
	    android:id="@+id/card_img"
	    android:layout_margin="3dp">
	    <RelativeLayout
		android:layout_width="66.0dip"
		android:orientation="horizontal"
		android:layout_height="66.0dip"
		android:gravity="center">

		<ImageView
		    android:layout_width="66.0dip"
		    android:layout_height="66.0dip"
		    android:id="@+id/img"
		    android:radius="42.0dip"
		    android:scaleType="centerCrop"
		    android:gravity="center"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:text="A"/>

		<ImageView
		    android:layout_centerInParent="true"
		    android:layout_width="30.0dip"
		    android:layout_height="30.0dip"
		    android:id="@+id/img_type"
		    android:radius="42.0dip"
		    android:scaleType="centerCrop"
		    android:gravity="center"

		/>
	    </RelativeLayout>
	</androidx.cardview.widget.CardView>

	<LinearLayout
	    android:background="@drawable/background"
	    android:layout_margin="5sp"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:layout_height="wrap_content">

	    <TextView
		android:textSize="15.0dip"
		android:gravity="left|center"
		android:gradientRadius="10"
		android:id="@+id/txt_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="#ffffff"
		
		android:textStyle="bold"/>

	    <TextView
		android:textSize="7.0dip"
		android:gravity="left"
		android:gradientRadius="10"
		android:id="@+id/txt_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textColor="#AEA3A3"/>





	    <LinearLayout
		android:layout_margin="5sp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_height="wrap_content">

		<TextView
		    android:layout_weight="1"
		    android:textSize="10.0dip"
		    android:gravity="left|center"
		    android:gradientRadius="10"
		    android:id="@+id/txt_type"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text=""
		    android:textStyle="bold"/>

		<TextView
		    android:layout_weight="1"
		    android:textSize="7.0dip"
		    android:gravity="left"
		    android:gradientRadius="10"
		    android:id="@+id/txt_size"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text=""
		    android:textColor="#AEA3A3"/>

	    </LinearLayout>

	</LinearLayout>
	<LinearLayout
	    android:visibility="gone"
	    android:layout_width="50sp"
	    android:layout_height="50sp"
	    android:gravity="center"
	    android:layout_weight="0">
	    <ImageView
		android:src="@drawable/ic_download_black"
		android:id="@+id/img_download"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	    <TextView
		android:visibility="gone"
		android:text="Open"
		android:id="@+id/btn_open"
		android:textSize="15sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	</LinearLayout>
    </LinearLayout>

    <View
	android:gravity="left"
	android:background="#DFDFDF"
	android:layout_width="match_parent"
	android:layout_height="0.1dip"
	android:text="ghsb"
	android:layout_marginLeft="22dp"
	android:layout_marginRight="24dp"/>

</LinearLayout>

